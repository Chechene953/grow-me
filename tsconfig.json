{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "ts-node": {
      "esm": false,
      "compilerOptions": {
        "module": "commonjs"
      }
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}

