rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // User avatars - users can upload/update their own avatar
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can view avatars
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Plant images - anyone can read, only authenticated users can write
    // For production, restrict writes to admins only
    match /plants/{plantId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}








